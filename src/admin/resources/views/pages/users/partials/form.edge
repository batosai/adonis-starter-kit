@jrmc.form.control({ name: 'lastname', class: 'w-full max-w-xs', label: t('models.user.lastname'), required: true, hint: t('models.user.lastname/hint') })
  @!jrmc.form.input()
@end

@jrmc.form.control({ name: 'firstname', class: 'w-full max-w-xs', label: t('models.user.firstname'), required: true, hint: t('models.user.firstname/hint') })
  @!jrmc.form.input()
@end

@jrmc.form.control({ name: 'email', class: 'w-full max-w-xs', required: true })
  @!jrmc.form.input()
@end

@can('UserPolicy.role', user)
  @jrmc.form.control({ name: 'role', class: 'w-full max-w-xs', required: true })
    @!jrmc.form.select({ options: [
        { text: t('models.role/name.user'), value: Roles.USER },
        { text: t('models.role/name.admin'), value: Roles.ADMIN },
      ],
      class: 'input-bordered',
    })
  @end
@end

@jrmc.form.control({ name: 'avatar', class: 'w-full max-w-xs', })
  @!jrmc.form.file()
@end

@if(user && user.avatar)
  <img
    class="object-cover w-40 mt-2"
    src="{{ await user.avatar.getUrl('thumbnail') }}"
    alt=""
    loading="lazy"
  />
@end

@jrmc.form.control({ name: 'password', class: 'w-full max-w-xs', label: t('models.user.password') })
  @!jrmc.form.password()
@end

@jrmc.form.control({ name: 'password_confirmation', class: 'w-full max-w-xs', label: t('models.user.password_confirmation') })
  @!jrmc.form.password()
@end
